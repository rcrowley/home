[alias]
    ci = commit
    co = checkout
    lg = log --abbrev-commit --all --date=relative --graph --pretty='format:%C(yellow)%h%d%Creset %s %C(cyan)(%aN <%aE>, %cr)%Creset'
    stat = status
	ci = commit
	co = checkout
	lg = log --abbrev-commit --date=relative --graph --pretty='format:%C(yellow)%h%d%Creset %s %C(black)(%Creset%C(cyan)%aN <%aE>, %cr%Creset%C(black))%Creset %C(magenta)%G?%Creset'
	stat = status
[color]
    ui = auto
[color "branch"]
    current = magenta
    remote = blue
[color "diff"]
    frag = cyan
    meta = blue
    whitespace = red reverse
[color "status"]
    changed = yellow
    untracked = red
[core]
    editor = vi
