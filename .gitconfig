[alias]
	ci = commit
	co = checkout
	lg = log --abbrev-commit --date=relative --graph --pretty='format:%C(yellow)%h%d%Creset %s %C(black)(%C(cyan)%aN%Creset %C(black)<%C(cyan)%aE%C(black)>, %C(cyan)%cr%C(black)) %C(magenta)%G?%Creset'
	stat = status
[color]
    ui = auto
[color "branch"]
    current = magenta
    remote = blue
[color "diff"]
    frag = cyan
    meta = blue
    whitespace = red reverse
[color "status"]
    changed = yellow
    untracked = red
[core]
    editor = vi
